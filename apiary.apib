        {
            "id" : 33333,
            "crimes" : [
                    12345,
                    12346,
                    12347 
            ],
            "zipcode": 78705,
            "lat": 32.123,
            "long": 32.123,
            demographics: {
                "population" : 100000
                "economic" : {
                    "<10000" : "10%",
